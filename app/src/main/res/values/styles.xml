<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@color/colorPrimary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_white</item>
    </style>

    <style name="Responsive16dp">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorDefault</item>
        <item name="colorControlActivated">@color/colorRating</item>
    </style>


    <style name="TextContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox" parent="Theme.MaterialComponents.Light.NoActionBar"/>

    <style name="Widget.MaterialComponents.BottomNavigationView.Colored" parent="Theme.MaterialComponents.Light.NoActionBar"/>

    <style name="TextContent.Subtitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.TextForm">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

<!--    <style name="bg_btn_blue">-->
<!--        <item name="android:buttonCornerRadius" tools:targetApi="p">8dp</item>-->
<!--        <item name="android:backgroundTint">#2699FB</item>-->
<!--    </style>-->

    <style name="LinearTheme">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>




</resources>